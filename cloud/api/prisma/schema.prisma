generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bin {
  id             Int           @id @default(autoincrement())
  deviceId       String        @unique @db.Uuid
  activationCode String        @unique
  activatedBin   ActivatedBin?
}

model ActivatedBin {
  id          Int      @id @default(autoincrement())
  name        String
  activatedAt DateTime

  binId Int @unique
  bin   Bin @relation(fields: [binId], references: [id])

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])

  measurements Measurement[]
}

// Hypertable by_range('measuredAt')
model Measurement {
  measuredAt          DateTime @db.Timestamptz(3)
  distanceCentimeters Int
  airQualityPpm       Int

  activatedBinId Int
  activatedBin   ActivatedBin @relation(fields: [activatedBinId], references: [id], onDelete: Cascade)

  @@id([measuredAt, activatedBinId])
}

model Organization {
  id      Int            @id @default(autoincrement())
  name    String
  bins    ActivatedBin[]
  members Member[]
}

enum Role {
  ADMIN
  VIEWER
}

model Member {
  role Role

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@id([userId, organizationId])
}

model User {
  id           Int     @id @default(autoincrement())
  name         String
  email        String  @unique
  isSuperAdmin Boolean

  microsoftLogin MicrosoftLogin?
  member         Member[]
  loginCode      LoginCode?
}

model MicrosoftLogin {
  id String @id

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model LoginCode {
  code      String   @id @default(uuid()) @db.Uuid
  createdAt DateTime

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}
