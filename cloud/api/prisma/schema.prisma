generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bin {
  id   Int    @id @default(autoincrement())
  name String
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique

  microsoftLogin MicrosoftLogin?
}

model MicrosoftLogin {
  id String @id

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}
